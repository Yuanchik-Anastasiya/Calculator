<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText"
        android:textSize="38pt"
        android:textStyle="bold"
        android:textColor="@color/textAlpha"
        android:background="@color/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingEnd="5dp"
        android:inputType="textPersonName"
        android:layout_weight="1"
        android:gravity="right|center"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:onClick="clickNumber"
                android:text="AC"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buPlusMinus"
                android:onClick="clickNumber"
                android:text="+/-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buDivision"
                android:onClick="operations"
                android:text="/"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buMultiply"
                android:onClick="operations"
                android:text="*"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:onClick="clickNumber"
                android:text="7"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu8"
                android:onClick="clickNumber"
                android:text="8"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu9"
                android:onClick="clickNumber"
                android:text="9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buPercent"
                android:onClick="clickPercent"
                android:text="%"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:onClick="clickNumber"
                android:text="4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu5"
                android:onClick="clickNumber"
                android:text="5"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu6"
                android:onClick="clickNumber"
                android:text="6"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buPlus"
                android:onClick="operations"
                android:text="+"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:onClick="clickNumber"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu2"
                android:onClick="clickNumber"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/bu3"
                android:onClick="clickNumber"
                android:text="3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buMinus"
                android:onClick="operations"
                android:text="-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bu0"
                android:onClick="clickNumber"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="2"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buDot"
                android:onClick="clickNumber"
                android:text="."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />
            <Button
                android:id="@+id/buEqual"
                android:onClick="clickEqual"
                android:text="="
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                style="@style/MyCustomButton"
                />

        </TableRow>
    </LinearLayout>


</LinearLayout>