<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Область дисплея -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#7DF9FF"
            android:background="#B25555FF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:paddingEnd="16dp"
            android:gravity="right|bottom"
            android:text="0"
            android:importantForAutofill="no" />
    </LinearLayout>

    <!-- Разделительная линия -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#C77DF9FF"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Клавиатура -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Строка 1: AC, ±, ÷, × -->
        <TableRow>
            <Button
                android:id="@+id/buAC"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="AC"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buPlusMinus"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="±"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buDivision"
                android:onClick="operations"
                android:layout_margin="1dp"
                android:text="÷"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buMultiply"
                android:onClick="operations"
                android:layout_margin="1dp"
                android:text="×"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
        </TableRow>

        <!-- Строки 2–4: Цифры и операции -->
        <TableRow>
            <Button
                android:id="@+id/bu7"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="7"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu8"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="8"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu9"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="9"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buPercent"
                android:onClick="clickPercent"
                android:layout_margin="1dp"
                android:text="%"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/bu4"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu5"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu6"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buPlus"
                android:onClick="operations"
                android:layout_margin="1dp"
                android:text="+"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/bu1"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu2"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/bu3"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="3"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buMinus"
                android:onClick="operations"
                android:layout_margin="1dp"
                android:text="-"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
        </TableRow>

        <!-- Строка 5: 0, ., =, ← -->
        <TableRow>
            <Button
                android:id="@+id/bu0"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buDot"
                android:onClick="clickNumber"
                android:layout_margin="1dp"
                android:text="."
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buEqual"
                android:onClick="clickEqual"
                android:layout_margin="1dp"
                android:text="="
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
            <Button
                android:id="@+id/buBackspace"
                android:onClick="onBackspaceClick"
                android:layout_margin="1dp"
                android:text="←"
                android:textColor="#E2F80000"
                android:textStyle="bold"
                android:textSize="24sp"
                style="@style/MyCustomButton" />
        </TableRow>
    </TableLayout>
</LinearLayout>
